/* pages/index/index.wxss */

.sectionSeperatorArea {
  background-color: #F5F5F5;
  height: 5px;
}

/* 分区内容 */
.sectionContent {
  /* display:flex; */
  /* justify-content: space-between; */
  margin:0px 15px 20px;

  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.sectionContentImage {
  /* width:65rpx;
  height:93rpx;  */
  width:50%;
}

.sectionContentDesp {
  /* flex-grow: 0; */
  width:50%;
  margin:0px 0px 0px 5px;
  display: flex;
  flex-direction: column;
  justify-content: space-between; 
}

.sectionContentDespUp {
  margin:0px 0px 0px 0px;
}

.sectionContentDespCourseName {
  margin:0px 0px 10px 5px;
  font-family: PingFangSC-Regular;
  font-size: 15px;
  color: #333333;
  line-height: 17px;
}

.sectionContentDespCourseDesp {
  flex-wrap: wrap;
  height: 0px; /* 只要设置一个高度, 如果描述文字过长, 就不会将下面的已学课时向下挤压 */
  margin:0px 0px 10px 5px;
  font-family: PingFangSC-Regular;
  font-size: 12px;
  color: #999999;
  line-height: 14px;
}

.sectionContentDespLearnedAndTotalTime {
  margin:0px 0px 0px 5px;
  font-family: PingFangSC-Regular;
  font-size: 12px;
  color: #666666;
  letter-spacing: 0;
  line-height: 12px;
  align-items:flex-end;
}

/* 微课section */
.microSetionContainer{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.microSetionRowItem {
  width:50%;
}

.microSectionContentLeft {
  margin: 0 7.5px 0 15px;
}

.microSectionContentRight {
  margin: 0 15px 0 7.5px;
}

.sectionContentImage {
  width:165px;
  height:93px; 
}
